@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hilton Baku</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap">
    <style>
        .contact-container {
            padding: 60px 20px;
            max-width: 800px;
            margin: 0 auto;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

            .contact-container h1 {
                font-size: 2.5em;
                margin-bottom: 20px;
                text-align: center;
            }

            .contact-container p {
                font-size: 1.1em;
                line-height: 1.6;
                margin-bottom: 20px;
            }

            .contact-container .highlight {
                font-weight: bold;
                color: #8e44ad;
            }

            .contact-container .contact-info {
                margin-bottom: 20px;
            }

                .contact-container .contact-info h3 {
                    margin-bottom: 10px;
                }

                .contact-container .contact-info p {
                    margin-bottom: 5px;
                }

            .contact-container form {
                margin-top: 20px;
            }

                .contact-container form .form-group {
                    margin-bottom: 15px;
                }

                .contact-container form button {
                    background-color: #8e44ad;
                    color: #ffffff;
                    border: none;
                    padding: 10px 20px;
                    cursor: pointer;
                    transition: background-color 0.3s ease;
                }

                    .contact-container form button:hover {
                        background-color: #5e3370;
                    }

        .map {
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="contact-container">
            <h1 style="padding-top:10px;">Contact Us</h1>
            <p>
                At <span class="highlight">Hilton Baku</span>, we are always here to help you. Please use the contact form below or reach out to us through any of the following contact details.
            </p>
            <div class="contact-info">
                <h3>Contact Information</h3>
                <p><strong>Address:</strong> 123 Hotel Street, Baku, Azerbaijan</p>
                <p><strong>Phone:</strong> +994 12 345 6789</p>
                <p><strong>Email:</strong> info@hiltonbaku.com</p>
            </div>
            <form asp-action="ContactUs" method="post">
                <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" name="name" required />
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required />
                </div>
                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
            <div class="map">
                <h3>Our Location</h3>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3030.56938030192!2d49.86709231509765!3d40.40926457936548!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40307d76a6b15d67%3A0x83df281e01ff5b1a!2sHilton%20Baku!5e0!3m2!1sen!2saz!4v1625641234567!5m2!1sen!2saz" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
    </div>
</body>
</html>
